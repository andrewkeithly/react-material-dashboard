{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "terminal.integrated.scrollback": 5000,
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  // Code Spell Checker
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode/extensions.json"
  ],
  "cSpell.enabledLanguageIds": ["javascript", "javascriptreact"],
  "cSpell.enableFiletypes": [
    "css",
    "editorconfig",
    "git-commit",
    "html",
    "ignore",
    "json",
    "jsonc",
    "jsx",
    "jsx-attr",
    "jsx-tags",
    "markdown",
    "plaintext",
    "scss",
    "text"
  ],
  "cSpell.language": "en,en-US",
  "cSpell.words": [
    "Keithly",
    "Topbar",
    "browserslist",
    "chartjs",
    "clsx",
    "fbase",
    "predeploy",
    "prettierrc"
  ]
}
